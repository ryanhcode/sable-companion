#!/usr/bin/env groovy

pipeline {
    agent any
    tools {
        jdk "jdk-21"
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Clean') {
            steps {
                echo 'Cleaning Project'
                sh 'chmod +x gradlew'
                sh './gradlew clean'
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                sh './gradlew build'
            }
        }
        stage('Publish') {
            steps {
                echo 'Deploying to Maven'
                withCredentials([
                    usernamePassword(credentialsId: 'publishing-user-credentials', usernameVariable: 'local_maven_user', passwordVariable: 'local_maven_token')
                ]) {
                    sh './gradlew publish'
                }
            }
        }
    }
}